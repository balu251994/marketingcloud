VIEW "hdbtables::DD07V" ( "DOMNAME",
 "VALPOS",
 "DDLANGUAGE",
 "DOMVALUE_L",
 "DOMVALUE_H",
 "DDTEXT",
 "DOMVAL_LD",
 "DOMVAL_HD",
 "APPVAL" ) AS SELECT T1."DOMNAME",
 T1."VALPOS",
 T2."DDLANGUAGE",
 T1."DOMVALUE_L",
 T1."DOMVALUE_H",
 T2."DDTEXT",
 T2."DOMVAL_LD",
 T2."DOMVAL_HD",
 T1."APPVAL" FROM "hdbtables::DD07L" T1,
 "hdbtables::DD07T" T2 WHERE T1."DOMNAME" = T2."DOMNAME" AND T1."DOMVALUE_L" = T2."DOMVALUE_L" AND T1."AS4LOCAL" = 'A' AND T2."AS4LOCAL" = 'A' 
;